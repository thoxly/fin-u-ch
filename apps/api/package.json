{
  "name": "api",
  "version": "0.1.0",
  "type": "module",
  "description": "Fin-U-CH Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && node scripts/add-js-extensions.js && node scripts/copy-templates.js",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:diagnostics": "jest matching-rules-diagnostics.test.ts --verbose",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "node ../../scripts/run-prisma-with-env.cjs migrate deploy",
    "prisma:studio": "prisma studio",
    "migrate:recurring-to-templates": "tsx scripts/migrate-recurring-to-templates.ts"
  },
  "dependencies": {
    "@fin-u-ch/shared": "workspace:*",
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-prom-bundle": "^8.0.0",
    "helmet": "^8.0.0",
    "iconv-lite": "^0.6.3",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.0",
    "nodemailer": "^7.0.10",
    "prom-client": "^15.1.0",
    "string-similarity": "^4.0.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.54.0",
    "@opentelemetry/auto-instrumentations-node": "^0.54.0",
    "@opentelemetry/instrumentation-http": "^0.54.0",
    "@opentelemetry/instrumentation-express": "^0.54.0",
    "@opentelemetry/exporter-otlp-http": "^0.26.0",
    "@opentelemetry/resources": "^1.27.0",
    "@opentelemetry/semantic-conventions": "^1.27.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.5",
    "@types/nodemailer": "^7.0.3",
    "@types/string-similarity": "^4.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "jest": "^30.2.0",
    "prisma": "^5.22.0",
    "ts-jest": "^29.4.4",
    "tsx": "^4.20.6",
    "typescript": "^5.7.3"
  }
}
